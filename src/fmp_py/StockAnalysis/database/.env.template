# FMP API Configuration
# Get your API key from: https://site.financialmodelingprep.com/developer/docs
FMP_API_KEY=your_api_key_here

# Database Configuration
FMP_DB_HOST=localhost
FMP_DB_PORT=3306
FMP_DB_NAME=fmp_cache
FMP_DB_USER=fmp_user
FMP_DB_PASSWORD=fmp_password

# Connection Pool Settings
FMP_DB_POOL_NAME=fmp_pool
FMP_DB_POOL_SIZE=5

# Cache Configuration
FMP_CACHE_ENABLED=true

# Cache TTL (Time To Live in seconds)
# Quotes - Real-time data (5 minutes)
FMP_CACHE_TTL_QUOTE=300

# Company Profiles - Relatively static data (24 hours)
FMP_CACHE_TTL_PROFILE=86400

# Historical Prices - Daily data (1 hour)
FMP_CACHE_TTL_HISTORICAL=3600

# Financial Statements - Quarterly/Annual data (24 hours)
FMP_CACHE_TTL_FINANCIALS=86400

# News Articles - Frequent updates (30 minutes)
FMP_CACHE_TTL_NEWS=1800

# Calendar Events - Daily data (1 hour)
FMP_CACHE_TTL_CALENDAR=3600

# Financial Metrics and Ratios - Quarterly data (24 hours)
FMP_CACHE_TTL_METRICS=86400
